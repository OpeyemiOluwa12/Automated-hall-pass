<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="main" alignment="TOP_LEFT" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.opeyemi.automatedhallpass.controller.AssignRoom">
   <children>
      <VBox spacing="50.0" StackPane.alignment="TOP_LEFT">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Assign room to student">
               <font>
                  <Font name="Roboto Medium" size="36.0" />
               </font></Text>
            <JFXComboBox fx:id="selectStudent" prefHeight="50.0" prefWidth="300.0" promptText="Select Student" />
            <JFXComboBox fx:id="selectHall" prefHeight="50.0" prefWidth="300.0" promptText="Select Hall" />
            <JFXComboBox fx:id="SelectRoom" layoutX="10.0" layoutY="69.0" prefHeight="50.0" prefWidth="300.0" promptText="Select Room" />
            <JFXComboBox fx:id="SelectBedSpace" layoutX="10.0" layoutY="107.0" prefHeight="50.0" prefWidth="300.0" promptText="Select Bed Space" />
            <JFXButton fx:id="save" buttonType="RAISED" onAction="#save" prefHeight="40.0" prefWidth="124.0" style="-fx-background-color: #7579ff;" text="Save" textFill="WHITE">
               <font>
                  <Font name="Roboto Medium" size="18.0" />
               </font></JFXButton>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
