<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.opeyemi.automatedhallpass.controller.AdminPage">
   <children>
      <HBox>
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="565.0" prefWidth="284.0" style="-fx-background-color: #7579ff;">
               <children>
                  <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../static/images/bg-02.jpg" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </ImageView>
                  <JFXButton fx:id="profile" buttonType="RAISED" onAction="#viewProfile" prefWidth="200.0" text="Profile" textFill="WHITE" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <font>
                        <Font name="Roboto Bold" size="18.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="assignStudent" buttonType="RAISED" layoutX="10.0" layoutY="75.0" onAction="#AssignStudent" prefWidth="200.0" text="Assign Student" textFill="WHITE">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <font>
                        <Font name="Roboto Bold" size="18.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="viewStudents" buttonType="RAISED" layoutX="10.0" layoutY="140.0" onAction="#viewStudents" prefWidth="200.0" text="View Student " textFill="WHITE">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <font>
                        <Font name="Roboto Bold" size="18.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="addStudent" buttonType="RAISED" layoutX="10.0" layoutY="205.0" onAction="#addStudent" prefWidth="200.0" text="Add Student" textFill="WHITE">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <font>
                        <Font name="Roboto Bold" size="18.0" />
                     </font>
                  </JFXButton>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <StackPane fx:id="adminHome" prefHeight="150.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</StackPane>
